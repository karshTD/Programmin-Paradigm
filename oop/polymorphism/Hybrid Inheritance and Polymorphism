#include <iostream>
using namespace std;

class A {
public:
    virtual void display() {
        cout << "Class A" << endl;
    }
};

class B : public A {
public:
    void display() override {
        cout << "Class B" << endl;
    }
};

class C : public A {
public:
    void display() override {
        cout << "Class C" << endl;
    }
};

int main() {
    A* a1 = new B();
    A* a2 = new C();

    a1->display();
    a2->display();

    delete a1;
    delete a2;
    return 0;
}
